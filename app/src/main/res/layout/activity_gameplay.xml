<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameplayActivity"
    android:background="#536B98">

    <GridLayout
        android:id="@+id/kakuroGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="10"
        android:rowCount="10">

    </GridLayout>

    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <FrameLayout
            android:id="@+id/frameNumberPalette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv7"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="7" />
                    <TextView
                        android:id="@+id/tv8"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="8" />
                    <TextView
                        android:id="@+id/tv9"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="9" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv4"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="4" />
                    <TextView
                        android:id="@+id/tv5"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="5" />
                    <TextView
                        android:id="@+id/tv6"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv1"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="1" />

                    <TextView
                        android:id="@+id/tv2"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="2" />

                    <TextView
                        android:id="@+id/tv3"
                        android:background="@drawable/grid_number_background"
                        style="@style/kakuroCellNumberStyle"
                        android:text="3" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:id="@+id/frameNotesNumberPalette"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNotes7"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="7" />
                    <TextView
                        android:id="@+id/tvNotes8"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="8" />
                    <TextView
                        android:id="@+id/tvNotes9"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="9" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNotes4"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="4" />
                    <TextView
                        android:id="@+id/tvNotes5"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="5" />
                    <TextView
                        android:id="@+id/tvNotes6"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNotes1"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="1" />

                    <TextView
                        android:id="@+id/tvNotes2"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="2" />

                    <TextView
                        android:id="@+id/tvNotes3"
                        android:background="@drawable/grid_number_notes_background"
                        style="@style/kakuroCellNotesNumberStyle"
                        android:text="3" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>